<h1>profile</h1>

<div class="card">
  <header class="flex two">
    <div>
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar.variant(resize_to_limit: [100, 100]) %>
      <% else %>
        <%= image_tag "profile_placeholder.png", size: 100 %>
      <% end %>
    </div>

    <div>
      <p><%= current_user.email %></p>
      <p>joined at <%= current_user.created_at.iso8601 %></p>
    </div>

  </header>
  <footer>
    <%= link_to 'edit', edit_user_registration_path %>
  </footer>
</div>
